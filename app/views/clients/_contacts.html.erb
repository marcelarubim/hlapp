<tr id="object-contact-<%= @id || ff.object.id %>" data-toggle="collapse" data-target=".collapseContacts-<%= @id || ff.object.id %>">
  <td>
    <% if ff.object.persisted? %>
      <label class="btn-sm">
        <%= ff.check_box :_destroy %>
      </label>
    <% end %>
  </td>
  <td><%= ff.object.persisted? ? ff.object.display : 'new contact' %></td>
  <td class="text-right">
    <% if ff.object.new_record? %>
        <%= button_tag "x", type: "button", remote: true, class:"btn btn-danger btn-sm", id: "remove-new-object", "data-id": @id, "data-type": 'contact' %>
    <% elsif ff.object.persisted? %>
      <%= link_to destroy_object_path(ff.object.class.name.downcase, ff.object.id), remote: true, method: :delete, data: { confirm: "Are you sure?" } do %>
      <button class="btn btn-danger btn-sm object_delete">x</button>
    <% end %>
  <% end %>
  </td>
</tr>
<tr class="collapse collapseContacts-<%= @id || ff.object.id %> <%= 'show' if ff.object.new_record? %> ">
  <td colspan="3">
    <div class="card">
      <div class="card-block">
        <div class="form-group row">
          <%= ff.label :fullname, 'Fullname:' %>
          <%= ff.text_field :fullname, placeholder: 'fullname', col: 'col-sm-10' %>
        </div>
        <div class="form-group row">
          <%= ff.label :telephone, 'Telephone:' %>
          <%= ff.telephone_field :telephone, placeholder: 'telephone' %>
          <%= ff.label :mobile, 'Mobile:' %>
          <%= ff.telephone_field :mobile, placeholder: 'mobile' %>
        </div>
        <div class="form-group row">
          <%= ff.label :email, 'Email:' %>
          <%= ff.email_field :email, placeholder: 'email' %>
          <%= ff.label :birthday, 'Birthday:' %>
          <%= ff.date_field :birthday, placeholder: 'birthday' %>
        </div>
        <div class="form-group row">
          <%= ff.label :position, 'Position:' %>
          <%= ff.text_field :position, placeholder: 'position' %>
          <%= ff.label :responsible_for, 'Responsible for:' %>
          <%= ff.text_field :responsible_for, placeholder: 'responsible_for' %>
        </div>
      </div>
    </div>
  </td>
</tr>
