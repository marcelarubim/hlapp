<% provide(:title, 'clients') %>

<div class='container mt-3'>
  <div class='row'>
    <div class="col-sm-12">
      <ul class="list-group">
        <% @clients.each do |client| %>
          <a href="<%= client_path(client) %>" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between align-items-center">
              <h6 class="mb-1"><%= client.business_name %></h6>
              <span class="badge badge-default badge-pill">#</span>
            </div>
            <p class="mb-1"><%= client.cnpj %></p>
            <div class="d-flex w-100 justify-content-between align-items-center">
              <small><%= client.telephone %></small>
              <small><%= time_ago_in_words(client.updated_at, include_seconds: true) %></small>
            </div>
          </a>
        <% end %>
      </ul>
    </div>
  </div>
</div>


