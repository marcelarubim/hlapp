<% provide(:title, 'Log in') %>
<div class='row'>
  <div class='container pt-3'>
    <%= form_for :session, url: login_path do |f| %>
      <div class='form-group cpf'>
        <label>CPF</label>
        <%= f.text_field :cpf, placeholder: 'only digits', class: 'form-control', 'aria-describedby': 'cpfHelp'%>
        <small id='cpfHelp' class='form-text text-muted'>Only digits</small>
      </div>
      <div class='form-group password'>
        <label>Password</label>
        <%= f.password_field :password, placeholder: 'password', class: 'form-control'%>
      </div>
      <div class='form-check remember'>
        <label class='form-check-label'>
          <%= f.check_box :remember_me, checked: true, class: 'form-check-input'%> Remember me
        </label>
      </div>
      <%= f.submit 'Log in', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
